<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!--Stock Image-->
        <RelativeLayout
            android:id="@+id/camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/inventory_image"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:scaleType="centerCrop"
                android:src="@drawable/inventory" />

            <TextView
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/inventory_image"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/colorPrimaryDark"
                android:text="Edit"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textAppearance="?android:textAppearanceSmall"
                android:textStyle="bold" />

        </RelativeLayout>

        <!--Product Detail Layout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/product_detail"
                android:textColor="#00796B"
                android:textAppearance="?android:textAppearanceLarge"
                android:textStyle="bold" />

            <!--Item Name-->
            <LinearLayout
                android:id="@+id/container_name"
                style="@style/LinearLayoutItemDescription">

                <TextView
                    style="@style/CategoryStyle"
                    android:text="@string/item_name" />

                <RelativeLayout style="@style/RelativeLayoutEditText">

                    <EditText
                        android:id="@+id/edit_item_name"
                        style="@style/EditorFieldStyle"
                        android:inputType="text" />

                </RelativeLayout>
            </LinearLayout>

            <!--Item Price-->
            <LinearLayout
                android:id="@+id/container_price"
                style="@style/LinearLayoutItemDescription">

                <TextView
                    style="@style/CategoryStyle"
                    android:text="@string/price" />

                <RelativeLayout style="@style/RelativeLayoutEditText">

                    <TextView
                        android:id="@+id/unit"
                        style="@style/EditorUnitsStyle"
                        android:text="@string/cad" />

                    <EditText
                        android:id="@+id/edit_item_price"
                        style="@style/EditorFieldStyle"
                        android:layout_toEndOf="@id/unit"
                        android:layout_toRightOf="@id/unit"
                        android:inputType="number" />

                </RelativeLayout>
            </LinearLayout>

            <!--Item Quantity-->
            <LinearLayout
                android:id="@+id/container_quantity"
                style="@style/LinearLayoutItemDescription">

                <TextView
                    style="@style/CategoryStyle"
                    android:text="@string/quantity_available" />

                <RelativeLayout style="@style/RelativeLayoutEditText">

                    <EditText
                        android:id="@+id/edit_item_quantity"
                        style="@style/EditorFieldStyle"
                        android:inputType="number" />

                </RelativeLayout>
            </LinearLayout>

            <!--Date-->
            <LinearLayout
                android:id="@+id/container_date"
                style="@style/LinearLayoutItemDescription">

                <TextView
                    style="@style/CategoryStyle"
                    android:text="@string/date_received" />

                <RelativeLayout style="@style/RelativeLayoutEditText">

                    <TextView
                        android:id="@+id/edit_item_date"
                        style="@style/EditorFieldStyle"
                        android:text="@string/pick_a_date" />

                </RelativeLayout>
            </LinearLayout>

            <!--Category-->
            <LinearLayout
                android:id="@+id/container_category"
                style="@style/LinearLayoutItemDescription">

                <!-- Label -->
                <TextView
                    style="@style/CategoryStyle"
                    android:text="@string/category" />

                <!-- Input field -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <!-- Gender drop-down spinner -->
                    <Spinner
                        android:id="@+id/spinner_category"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:paddingEnd="16dp"
                        android:paddingRight="16dp"
                        android:spinnerMode="dropdown" />
                </LinearLayout>
            </LinearLayout>

            <!-- Item Location -->
            <LinearLayout
                android:id="@+id/container_location"
                style="@style/LinearLayoutItemDescription">

                <!-- Label -->
                <TextView
                    style="@style/CategoryStyle"
                    android:text="@string/item_location" />

                <!-- Input fields -->
                <RelativeLayout style="@style/RelativeLayoutEditText">

                    <!-- Weight field -->
                    <EditText
                        android:id="@+id/edit_item_location"
                        style="@style/EditorFieldStyle"
                        android:inputType="text" />

                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="16dp"
            android:background="#000" />

        <!--Supplier Information-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/supplier"
                android:textColor="#00796B"
                android:textAppearance="?android:textAppearanceLarge"
                android:textStyle="bold" />

            <!-- Supplier Name -->
            <LinearLayout
                android:id="@+id/container_supplier"
                style="@style/LinearLayoutItemDescription">

                <!-- Label -->
                <TextView
                    style="@style/CategoryStyle"
                    android:text="@string/supplier_name" />

                <!-- Input fields -->
                <RelativeLayout style="@style/RelativeLayoutEditText">

                    <!-- Weight field -->
                    <EditText
                        android:id="@+id/edit_item_supplier"
                        style="@style/EditorFieldStyle"
                        android:inputType="text" />

                </RelativeLayout>
            </LinearLayout>

            <!-- Supplier Contact Number-->
            <LinearLayout
                android:id="@+id/container_supplier_contact_number"
                style="@style/LinearLayoutItemDescription">

                <!-- Label -->
                <TextView
                    style="@style/CategoryStyle"
                    android:text="@string/contact_number" />

                <!-- Input fields -->
                <RelativeLayout style="@style/RelativeLayoutEditText">

                    <!-- Weight field -->
                    <EditText
                        android:id="@+id/edit_item_supplier_contact_number"
                        style="@style/EditorFieldStyle"
                        android:inputType="number" />

                </RelativeLayout>
            </LinearLayout>

            <!-- Supplier Email Address -->
            <LinearLayout
                android:id="@+id/container_supplier_email_address"
                style="@style/LinearLayoutItemDescription">

                <!-- Label -->
                <TextView
                    style="@style/CategoryStyle"
                    android:text="@string/supplier_email_id" />

                <!-- Input fields -->
                <RelativeLayout style="@style/RelativeLayoutEditText">

                    <!-- Weight field -->
                    <EditText
                        android:id="@+id/edit_item_supplier_email_id"
                        style="@style/EditorFieldStyle"
                        android:inputType="textEmailAddress" />

                </RelativeLayout>
            </LinearLayout>

            <!-- ORDER AND DELETE BUTTON -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/place_order"
                    style="@style/ButtonStyle"
                    android:background="@color/colorPrimary"
                    android:text="@string/place_order" />

                <Button
                    android:id="@+id/delete_item"
                    style="@style/ButtonStyle"
                    android:background="#EC2929"
                    android:text="@string/delete_item" />

                <Button
                    android:id="@+id/save_item"
                    style="@style/ButtonStyle"
                    android:background="@color/colorPrimary"
                    android:text="@string/save_item" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>